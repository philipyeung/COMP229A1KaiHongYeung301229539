<%- include partials/header_Morph.ejs %>

<%- include partials/main_nav.ejs %>


<main class="p-5 mb-4 bg-primary rounded-3">

  <div class="container mt-3">
    <h2><%= title %></h2>
    <div class="mt-4 p-5 bg-secondary text-primary rounded  padding-1 border-radius-30 ">


      <div class="container">
        
        <div class="row align-items-start">            
          <p>Feel free to contact me</p>               
          <!--link to contact email-->
          <a href="mailto:kyeung39@my.centennialcollege.ca" class="link-success"><i class="fas fa-envelope-square"></i> kyeung39@my.centennialcollege.ca</a>
        </div>
        <br>
        <div class="row align-items-start">
          <p>Or leave me some messages</p>

        

          <!--submit form for contact message-->
          <form action="/contactMessage" method="post" class="form-text">
            <div class="mb-3">
              <label for="firstName" class="form-label">First Name</label>              
              <input placeholder="Your First Name" type="text" class="form-control" id="firstName" name="firstName"  >              
            </div>
            <div class="mb-3">
              <label for="lastName" class="form-label">Last Name</label>              
              <input placeholder="Your Last Name" type="text" class="form-control" id="lastName" name="lastName" >              
            </div>
            <div class="mb-3">
              <label for="contactNumber" class="form-label">Contact Number</label>              
              <input placeholder="Your Contact Number" type="text" class="form-control" id="contactNumber" name="contactNumber" >              
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email Address</label>
              <input placeholder="Your Email" type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp">              
            </div>

            <div class="form-group">
              <label for="message" class="form-label">Message</label>
              <textarea placeholder="Your Message" type="text" class="form-control" id="message" name="message" rows="3"></textarea>
            </div>
            
            <div id="info" class="form-text text-info">Your information is safe. I'll never share your contact information.</div>
            <br>
          <!--submit form button, back to home page-->
          
            <button type="submit" class="btn btn-success btn-lg" ">SEND</button>
            
            <div class="link-success"><%= response%></div>
            <div><%= JSON.stringify(body)%></div>  

          </form>
        </div>

      </div>

    </div>
  </div>


</main>


